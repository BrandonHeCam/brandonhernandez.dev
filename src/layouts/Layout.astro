---
import { ViewTransitions } from "astro:transitions";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <meta
      name="description"
      content="Desarrollador Full Stack y Estudiante de Ingeniería en Sistemas en la Benemérita Universidad Autónoma de Puebla. Apasionado por la tecnología y las últimas tendencias en desarrollo web. Este es el espacio donde comparto mi evolución como ingeniero, los proyectos que he desarrollado y los conocimientos que he adquirido a través de mi blog personal."
    />
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#3b82f6" />

    <link rel="canonical" href="https://brandonhernandez-dev.vercel.app/" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter+Tight:wght@400;600;700;900&family=Lexend:wght@300;400;700&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body
    class="flex flex-col px-4 mx-auto min-h-screen sm:max-w-xl lg:max-w-4xl lg:px-0 xl:max-w-5xl dark:bg-slate-900"
  >
    <Header />
    <main class="flex flex-col place-content-center grow shrink-0">
      <slot />
    </main>
    <Footer />
  </body>
</html>
