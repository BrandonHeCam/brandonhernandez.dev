---
interface Props {
  platform: string;
  username: string;
}

const { platform, username } = Astro.props;
---

<a
  class="flex justify-center items-center gap-2 rounded-md border border-black px-4 py-2 text-sm font-medium hover:text-white hover:bg-black hover:fill-white transition-colors duration-200 transform"
  href={`https://www.${platform}.com/${username}`}
  target="_blank"
  rel="noopener noreferrer"
>
  <span class="capitalize">{platform}</span>
  <figure>
    <slot />
  </figure>
</a>
