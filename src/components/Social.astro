---
interface Props {
  platform: string;
  username: string;
}

const { platform, username } = Astro.props;
---

<a
  class="flex justify-center items-center gap-2 rounded-md border border-black px-4 py-2 text-sm font-medium bg-white/5 hover:text-white hover:bg-black hover:fill-white transition-colors duration-200 transform dark:border-white dark:text-white dark:fill-white dark:hover:bg-white dark:hover:text-black dark:hover:fill-black"
  href={`https://www.${platform}.com/${username}`}
  target="_blank"
  rel="noopener noreferrer"
>
  <slot />
</a>
