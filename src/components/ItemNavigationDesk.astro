---
interface Props {
  redirect: string;
}

const { redirect } = Astro.props;
---

<a
  href={redirect}
  class="font-medium hover:text-black/90 border-b-2 border-transparent hover:border-blue-500 cursor-pointer transition-colors duration-300 transform dark:text-white dark:hover:text-white/80"
>
  <slot />
</a>
